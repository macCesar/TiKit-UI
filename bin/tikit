#!/usr/bin/env node

const tikit = require('../index.js');
const { program } = require('commander');
const mainPackage = require('../package.json');

program
	.version(mainPackage.version)
	.description(mainPackage.description)
	.action(() => {
		tikit.help();
	});

//! install command
program
	.command('install [component] [file-name]')
	.alias('i')
	.description('To install components into your project!')
	.action((component, file) => {
		tikit.install(component, file);
	});

//! list command
program
	.command('list [component]')
	.alias('l')
	.description('To enlist available compoments')
	.action((component) => {
		tikit.list(component);
	});

//! help command
program
	.command('help [component]')
	.description('To learn more about a component')
	.action((component) => {
		tikit.help(component);
	});

program.parse(process.argv);
