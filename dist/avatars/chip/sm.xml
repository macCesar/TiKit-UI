<Alloy>
	<TikitAvatar module="tikit.ui" component="view" classes="$.args.classes" class="w-auto h-auto rounded-10 horizontal bg-gray-200">
		<ImageView module="tikit.ui" component="avatar" image="$.args.image" name="$.args.name" border="$.args.border" class="w-8 h-8 my-1 ml-1 bg-white rounded-8" />
		<Label module="tikit.ui" class="text-sm ml-1.5 text-gray-500" text="$.args.name" classes="$.args.classes" />
		<View class="w-2" />
	</TikitAvatar>
</Alloy>
