<Alloy>
	<TikitAvatar module="tikit.ui" component="view" classes="$.args.classes" class="w-auto h-auto rounded-12 horizontal bg-gray-200">
		<ImageView name="$.args.name" image="$.args.image" class="w-10 h-10 my-1 ml-1 bg-white rounded-10 ios:prevent-default-image" />
		<Label module="tikit.ui" text="$.args.name" classes="$.args.classes" class="text-sm ml-1.5 text-gray-500" />
		<View class="w-2" />
	</TikitAvatar>
</Alloy>
