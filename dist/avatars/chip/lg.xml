<Alloy>
  <TikitAvatar module="tikit.ui" component="view" classes="$.args.classes" class="w-auto h-auto rounded-16 horizontal bg-gray-200">
    <ImageView name="$.args.name" image="$.args.image" class="w-14 h-14 my-1 ml-1 bg-white rounded-14 ios:prevent-default-image touch-enabled-false" />
    <Label module="tikit.ui" text="$.args.name" classes="$.args.classes" class="text-lg font-regular ml-1.5 text-gray-500 touch-enabled-false" />
    <View class="w-2 touch-enabled-false" />
  </TikitAvatar>
</Alloy>
