<Alloy>
  <TikitAvatar module="tikit.ui" component="view" classes="$.args.classes" class="w-auto h-auto rounded-(2.25rem) horizontal bg-gray-200">
    <ImageView name="$.args.name" image="$.args.image" class="w-16 h-16 my-1 ml-1 bg-white rounded-16 ios:prevent-default-image touch-enabled-false" />
    <Label module="tikit.ui" text="$.args.name" classes="$.args.classes" class="text-xl font-regular ml-1.5 text-gray-500 touch-enabled-false" />
    <View class="touch-enabled-false w-2" />
  </TikitAvatar>
</Alloy>
