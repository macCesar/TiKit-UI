<Alloy>
	<TikitAvatar module="tikit.ui" component="view" classes="$.args.classes" class="w-auto h-auto rounded-(2.75rem) horizontal bg-gray-200">
		<ImageView name="$.args.name" image="$.args.image" class="w-20 h-20 my-1 ml-1 bg-white rounded-20 ios:prevent-default-image" />
		<Label module="tikit.ui" text="$.args.name" classes="$.args.classes" class="text-2xl ml-1.5 text-gray-500" />
		<View class="w-2" />
	</TikitAvatar>
</Alloy>
