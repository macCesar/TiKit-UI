<Alloy>
  <TikitCard module="tikit.ui" component="showcase" classes="$.args.classes" class="w-11/12 h-auto rounded-12 bg-gray-500/90">
    <View class="mx-5 mt-5 mb-4 vertical touch-enabled-false">
      <ImageView id="name" name="$.args.name" image="$.args.image" class="w-screen h-auto rounded-6 ios:prevent-default-image touch-enabled-false" />
      <Label id="title" text="$.args.title" class="w-full mt-4 text-base font-bold text-left text-white/90 touch-enabled-false" />
      <Label id="text" text="$.args.text" class="w-full text-sm text-left font-regular text-white/80 touch-enabled-false" />
    </View>
  </TikitCard>
</Alloy>
