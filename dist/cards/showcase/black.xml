<Alloy>
  <TikitCard module="tikit.ui" component="showcase" classes="$.args.classes" class="rounded-12 h-auto w-11/12 bg-gray-950/90">
    <View class="vertical touch-enabled-false mx-5 mb-4 mt-5">
      <ImageView id="name" name="$.args.name" image="$.args.image" class="rounded-6 ios:prevent-default-image touch-enabled-false h-auto w-screen" />
      <Label id="title" text="$.args.title" class="touch-enabled-false mt-4 w-full text-left text-base font-bold text-white/90" />
      <Label id="text" text="$.args.text" class="font-regular touch-enabled-false w-full text-left text-sm text-white/80" />
    </View>
  </TikitCard>
</Alloy>
